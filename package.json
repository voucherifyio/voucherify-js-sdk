{
	"name": "voucherify-js-sdk",
	"private": true,
	"engineStrict": true,
	"engines": {
			"node": "14.15"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/voucherifyio/voucherify-js-sdk.git"
	},
	"bugs": {
		"url": "https://github.com/voucherifyio/voucherify-js-sdk/issues",
		"email": "support@voucherify.io"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"lerna": "lerna",
		"start": "lerna run start --stream --parallel",
		"lint": "lerna run lint",
		"lint:fix": "lerna run lint -- --fix",
		"build": "lerna run build",
		"prepublish": "lerna run prepublish",
		"changeset": "changeset",
		"changeset:code": "EDITOR=\"code --wait \" changeset",
		"changeset:empty": "changeset --empty",
		"changeset:status": "changeset status",
		"stable:version": "changeset version",
		"stable:release": "changeset publish",
		"canary:version": "changeset version --snapshot canary",
		"canary:release": "changeset publish --tag canary"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.2.7",
		"@changesets/cli": "2.12.0",
		"@rollup/plugin-replace": "2.3.4",
		"lerna": "3.22.1",
		"tsdx": "0.14.1",
		"typescript": "4.1.3",
		"@typescript-eslint/eslint-plugin": "4.11.1",
		"@typescript-eslint/parser": "4.11.1",
		"eslint": "7.16.0",
		"eslint-config-prettier": "7.1.0",
		"eslint-config-react-app": "6.0.0",
		"eslint-plugin-flowtype": "5.2.0",
		"eslint-plugin-import": "2.22.1",
		"eslint-plugin-jsx-a11y": "6.4.1",
		"eslint-plugin-prettier": "3.3.0",
		"eslint-plugin-react": "7.22.0",
		"eslint-plugin-react-hooks": "4.2.0",
		"prettier": "2.2.1"
	}
}
